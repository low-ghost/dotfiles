# search all branches for a file (regex w/ rg)
gfsgrep() {
  for branch in `git for-each-ref --format="%(refname)" refs/heads`; do
    found_file=`git ls-tree -r --name-only $branch | rg $1`
    if [[ ! -z "${found_file// }" ]]; then
      echo $branch: $found_file
    fi
  done
}

