set -g status-bg "colour246"
set -g message-command-fg "colour243"
set -g status-justify "left"
set -g status-left-length "100"
set -g status "on"
set -g pane-active-border-fg "colour130"
set -g message-bg "colour250"
set -g status-right-length "100"
set -g status-right-attr "none"
set -g message-fg "colour243"
set -g message-command-bg "colour250"
set -g status-attr "none"
set -g status-utf8 "on"
set -g pane-border-fg "colour250"
set -g status-left-attr "none"
setw -g window-status-fg "colour228"
setw -g window-status-attr "none"
setw -g window-status-activity-bg "colour246"
setw -g window-status-activity-attr "none"
setw -g window-status-activity-fg "colour130"
setw -g window-status-separator ""
setw -g window-status-bg "colour246"
set -g status-left "#[fg=colour228,bg=colour130] #S #[fg=colour130,bg=colour246,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=colour250,bg=colour246,nobold,nounderscore,noitalics]#[fg=colour243,bg=colour250] #(. ~/repo/dotfiles/weather/format_weather.sh) #[fg=colour130,bg=colour250,nobold,nounderscore,noitalics]#[fg=colour228,bg=colour130] %m-%d  %H:%M "
