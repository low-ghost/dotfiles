pyserve() {
  if [ -z "$1" ]
    then
      timeout 1h python -m SimpleHTTPServer; notify-send 'python server shutdown'
    else
      timeout "$@" python -m SimpleHTTPServer; notify-send 'python server shutdown'
    fi
}
